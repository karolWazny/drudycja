<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lab_main_tytul"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textSize="65sp"
        android:fontFamily="@font/bleeding_cowboy"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorBialy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/lab_kontynuuj"
        android:textSize="20sp"
        android:fontFamily="@font/caslon_antique"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorBialy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/lab_new_game"
        android:fontFamily="@font/caslon_antique"
        android:textSize="20sp"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorBialy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/lab_kampanie"
        android:fontFamily="@font/caslon_antique"
        android:textSize="20sp"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorBialy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/lab_pomoc"
        android:fontFamily="@font/caslon_antique"
        android:textSize="20sp"/>
</LinearLayout>